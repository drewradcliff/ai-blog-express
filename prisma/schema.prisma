generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  tweetUrl  String
  title     String
  content   String
  createdAt DateTime @default(now())
  Image     Image?
}

model Image {
  id       Int    @id @default(autoincrement())
  fileName String
  Post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId   Int    @unique
}
